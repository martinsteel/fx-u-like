<h1>FX-u-like</h1>
<p class="lead">Convert between currencies</p>

<%= form_tag do %>
    <div class="col-sm-8 col-sm-offset-2 jumbotron">
    <div class="row">
        <div class="col-sm-6">
            <div class="row form-group">
                <label for="date" class="col-sm-4 control-label">Date</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" id="date">
                </div>
            </div>
            <div class="row form-group">
                <label for="amount" class="col-sm-4 control-label">Amount</label>
                <div class="col-sm-4">
                    <input type="number" class="form-control" id="amount">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row form-group">
                <label for="from" class="col-sm-4 control-label">From</label>
                <div class="col-sm-8">
                    <select class="form-control" id="from"></select>
                </div>
            </div>
            <div class="row form-group">
                <label for="to" class="col-sm-4 control-label">To</label>
                <div class="col-sm-8">
                    <select class="form-control" id="to"></select>
                </div>
            </div>
        </div>        
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="row form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button class="btn btn-primary" id="convert">Convert</button>
                </div>
            </div>
        </div>
    </div>
    </div>
<% end %>